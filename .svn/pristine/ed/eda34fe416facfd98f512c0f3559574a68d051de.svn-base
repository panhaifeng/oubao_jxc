function _ctlBtRadio($name,$params){ 
    $itemName   = $params['itemName'];
    $title  = $params['title'];
    $value = $params['value'];
    $checked = $params['checked'] ?'checked':'';

    $html = "<div class=\"radio\">
    <label>
      <input type=\"radio\" name=\"{$itemName}\" id=\"{$itemName}\" value=\"{$value}\" {$checked}>{$title}
    </label>
  </div>";
    return $html;   
}
?>